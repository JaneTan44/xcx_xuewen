/* pages/activity/giftcard/personalReg.wxss */
.content_info {
  top: 614rpx;
  background: rgba(255, 255, 255, 1);
  width: 86%;
  height: 750rpx;
  background-color: #fff;
  margin: 0 7%;
  position: absolute;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.3);
  bottom: 55rpx;
  z-index: 9;
  box-sizing: border-box;
  padding: 48rpx 55rpx 77rpx;
}
form {
  margin-top: 66rpx;
  display: block;
}
.content_info>text {
  display: block;
  text-align: center;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
  font-size: 34rpx;
}

.input_box {
  width: 100%;
  height: 50rpx;
  background: rgba(236, 234, 232, 1);
  border-radius: 50rpx;
  margin-top: 40rpx;
}

.code {
  width: 65%;
  display: inline-block;
  float:left;
}
.code .input_box {
  width: 124px;
  display: inline-block;
  vertical-align: top;
  margin-top: 0;
}

.xw_code {
  display: inline-block;
  float: right;
  margin-top: 40rpx;
  width: 166rpx;
  padding: 0;
  line-height: 50rpx;
  font-size: 24rpx;
}

input {
  border: none;
  outline: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  width: calc(100% - 74rpx);
  height: 50rpx;
  line-height: 50rpx;
  background: transparent;
  display: inline-block;
  vertical-align: middle;
  padding: 0 10rpx;
  font-size: 24rpx;
  text-align:left;
}

label {
  margin-left: 16rpx;
  display: inline-block;
  vertical-align: middle;
}
.btn_container .xw_botton{
  margin-top: 62rpx;
  line-height: 50rpx;
}
