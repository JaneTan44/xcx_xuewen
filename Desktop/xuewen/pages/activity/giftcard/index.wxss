.gift_card_wrap {
  padding: 0px;
  margin: 0;
}

.htm_background {
  width: 100%;
}

.htm_background image {
  width: 100%;
  display: block;
  height: auto;
}

.content_info {
  width: 86%;
  height: 750rpx;
  background-color: #fff;
  margin: 0 7%;
  position: absolute;
  border-radius: 10rpx;
  box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.3);
  top: 614rpx;
  z-index: 9;
  padding: 88rpx 40rpx;
  box-sizing: border-box;
}

.tr_msg text {
  font-size: 36rpx;
  display: block;
  text-align: center;
  font-family: PingFang-SC-Bold;
  letter-spacing: 2rpx;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  line-height: 28px;
}
.xw_botton{margin: 48rpx auto 88rpx;
}
.giftcard_dialog>text {
  display: block;
  text-align: center;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
  font-size: 34rpx;
}
.giftcard_dialog view{
  overflow: hidden;
}
form .input_box:first-child{
  margin-top: 0;
}
.input_box {
  width: 100%;
  height: 50rpx;
  background: rgba(236, 234, 232, 1);
  border-radius: 50rpx;
  margin-top: 40rpx;
}

.code {
  width: 65%;
  display: inline-block;
  float:left;
  margin-top: 40rpx !important;
}
.code .input_box {
  width: 124px;
  display: inline-block;
  vertical-align: top;
  margin-top: 0;
}

.xw_code {
  display: inline-block;
  float: right;
  margin-top: 40rpx;
  width: 166rpx;
  padding: 0;
  line-height: 50rpx;
  font-size: 24rpx;
  margin-bottom: 0;
}

input {
  border: none;
  outline: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  width: calc(100% - 74rpx);
  height: 50rpx;
  line-height: 50rpx;
  background: transparent;
  display: inline-block;
  vertical-align: middle;
  padding: 0 10rpx;
  font-size: 24rpx;
  text-align:left;
}

label {
  margin-left: 16rpx;
  display: inline-block;
  vertical-align: middle;
}
.btn_container .xw_botton{
  margin-top: 62rpx;
  line-height: 50rpx;
}
