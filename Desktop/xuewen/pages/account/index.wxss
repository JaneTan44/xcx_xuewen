/* pages/account/index.wxss */
.user_page {
  min-height: 120px;
  background: #fff;
}
.user_page .user_face_box {
height:80px;
width: 80px;
margin:0px auto;
padding:20px 0 0 0;
background-size:100% 100%;
}
.user_page .user_face_box image {
  border-radius:180px;
  width: 100%;
  height: 100%;
}
.user_page .user_name {
  margin:5px auto 0px auto;
  text-align: center;
  color: #333333;
  font-size: 16px;
}
.user_page .user_desc {
  margin:5px auto 0 auto;
  text-align: center;
  color: #999999;
  font-size: 14px;
}